<?xml version="1.0" ?>
<DynamicsSystem 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="SceneFile"  
    xsi:schemaLocation="SceneFile SceneFile.xsd">

<SceneSettings>

    <Visualization>
        <SceneScale value="100"/> 
    </Visualization>
    
    <RecorderSettings mode="everyTimeStep" statesPerSecond="30"/>
    
    <TimeStepperSettings deltaT ="0.01" endTime="10">
        <InclusionSolverSettings        method="SORContact" 
                                        useGPU ="false" 
                                        useGPUID="0" 
                                        alphaJORProx="0.2" 
                                        alphaSORProx="1.5" 
                                        matrixRStrategy="max"
                                        driftCorrectionGap="true" 
                                        driftCorrectionGapAlpha="0.1"
                                        computeResidual="true"
                                        computeTotalOverlap="true"
                                        convergenceMethod="InVelocity"
                                        minIter="50" maxIter="1000" 
                                        absTol="1e-6" relTol="1e-6" 
                                        isFiniteCheck = "false"/>

<!--
        <SimulateFromReference enabled="false" type="continue" file="./SimFiles/5000Balls/SimulationState.sim" />
-->
<!--
        <SimulateFromReference type="continue" file="./SimFiles/Reference/StateData.sim" enabled="true" />
-->
    </TimeStepperSettings>
     
    <ContactParameterMap>
        <ContactParameterStandard type="UCF" mu="0.5" epsilonN="0.5" epsilonT="0.0"/>
        <ContactParameter materialId1="1" materialId2="2" type="UCFD"  mu="0.3" epsilonN="0.0" epsilonT="0" invDampingN="1e-6" invDampingT="0.0"/>
        <ContactParameter materialId1="1" materialId2="1" type="UCFD"  mu="0.3" epsilonN="0.0" epsilonT="0" invDampingN="1e-6" invDampingT="0.0"/>
    </ContactParameterMap>
    
    <GlobalGeometries>
        <Sphere distribute="random" radius="0.7e-3" seed="5" minRadius="1e-3" maxRadius="2e-3" id="1" instances="10" />
    </GlobalGeometries>
    
    <ExternalForces>
<!--
        <ForceField  applyTo="all" type="spatialspherical-timerandom" seed="0" boostTime="0.8" pauseTime="1" amplitude="0.5" randomOn="true" minPoint="-6 -6 -2" maxPoint="6 6 5"  startTime="0" endTime="1000" />
-->
        <ForceField  applyTo="all" type="gravity" value="10" direction="-0.4539905 0 -0.891006524" />
    </ExternalForces>
        

<!--
    <GlobalInitialCondition file="/media/zfmgpu/Data/GabrielNuetzi/SimFiles/SimFilesBrutus/Avalanche1M-DriftC-2/first/SimState.sim" whichState="time" time="0.2" useTimeToContinue="true"/>
-->
    


<!--
    <GlobalSelectiveIds>
        <Set value="0,0  0,9 0,3" />
    </GlobalSelectiveIds>
-->

<MPISettings>
    <ProcessTopology mode="dynamic" policy="alwaysRebuild" policyCheckEveryXTimeStep="100" bodyLimit="5000">
        <Topology type="grid"  dimension="4 1 1" matchProcessDimToExtent="true" buildMode="AABB" minGridSize="5e-3" aligned="true" minPoint="-2 -2 2.5 " maxPoint="2 2 3.5"/>
        <MassPointPrediction nPoints="10" deltaT="0.01"/>
        <Visualization>
            <Material name="PlaneYellowWireNoCull"/>    
        </Visualization>   
    </ProcessTopology>

    <InclusionSolverSettings  splitNodeUpdateRatio="1" convergenceCheckRatio="1"/>
</MPISettings>

</SceneSettings>




<SceneObjects>



    <RigidBodies name="balls1" instances="60" groupId="0" enableSelectiveIds="true" >
        
